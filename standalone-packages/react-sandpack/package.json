{
  "name": "react-smooshpack",
  "version": "0.0.66",
  "description": "",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/codesandbox/codesandbox-client",
    "directory": "packages/react-sandpack"
  },
  "license": "SEE LICENSE.MD IN ROOT",
  "author": "Ives van Hoorne <ives.v.h@gmail.com>",
  "files": [
    "dist",
    "es"
  ],
  "sideEffects": "*.css",
  "main": "dist/react-sandpack.js",
  "module": "es/react-sandpack.js",
  "jsnext:main": "es/react-sandpack.js",
  "typings": "dist/types/react-sandpack.d.ts",
  "scripts": {
    "prebuild": "rimraf dist && rimraf es",
    "build": "tsc && rollup -c rollup.config.ts && yarn build:min",
    "build:min": "cross-env BUILD_MINIFY=1 rollup -c rollup.config.ts",
    "commit": "git-cz",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prepublish": "yarn build",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "start": "tsc --watch",
    "storybook": "CODESANDBOX_ENV=development start-storybook -p 6006 --no-dll",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "watch:rollup": "rollup -c rollup.config.ts -w",
    "install-dependencies": "yarn",
    "build-storybook": "build-storybook --no-dll"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "@codemirror/next": "^0.14.0",
    "@stitches/react": "^0.0.2",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^5.0.35",
    "@types/shelljs": "^0.8.0",
    "classnames": "^2.2.5",
    "codemirror": "^5.35.0",
    "codesandbox-api": "0.0.24",
    "codesandbox-import-utils": "^1.2.3",
    "react-broadcast": "^0.6.2",
    "react-codemirror2": "^4.0.1",
    "rollup-plugin-scss": "^0.4.0",
    "smooshpack": "^0.0.66"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.1.9",
    "@storybook/addon-essentials": "^6.1.9",
    "@storybook/addon-knobs": "^6.1.9",
    "@storybook/addon-links": "^6.1.9",
    "@storybook/react": "^6.1.9",
    "@types/classnames": "^2.2.6",
    "@types/codemirror": "0.0.55",
    "@types/jest": "^22.0.0",
    "@types/node": "^9.4.6",
    "@types/react": "^16.9.17",
    "@types/react-broadcast": "^0.6.1",
    "awesome-typescript-loader": "^3.5.0",
    "babel-loader": "^7.1.5",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^24.9.0",
    "lodash.camelcase": "^4.3.0",
    "npm-run-all": "^4.1.2",
    "prompt": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.67.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sass": "^0.6.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^12.4.1",
    "storybook-addon-jsx": "^7.3.4",
    "ts-jest": "^24.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.10.0",
    "typescript": "4.0.3",
    "validate-commit-msg": "^2.12.2"
  },
  "peerDependencies": {
    "react": "^16.5.2"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
